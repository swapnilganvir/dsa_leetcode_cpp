class Solution {
public:
    bool isValid(string s) {
        if(s[0] == ')' || s[0] == ']' || s[0] == '}') return false;
        stack<char> stk;
        for(char str : s){
            if(str == '(' || str == '[' || str == '{') stk.push(str);
            else if(str == ')'){
                if(stk.empty()) return 0;
                else if(stk.top() == '(') stk.pop();
                else return 0;
            }
            else if(str == ']'){
                if(stk.empty()) return 0;
                else if(stk.top() == '[') stk.pop();
                else return 0;
            }
            else{
                if(stk.empty()) return 0;
                else if(stk.top() == '{') stk.pop();
                else return 0;
            }
        }
        return stk.empty();
    }
};
